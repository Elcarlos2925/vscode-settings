   #ALGORITMOS DE BUSQUEDA
def Secuencial(object):
    def __init__(self):#METODO ALMACENAMIENTO DE DATOS
        self.lista = []
    def add(self):#METODO AGREGAR ELEMENTO
        item=random.randint(1, 100)
        self.lista.append(item)
def Dicotomico(object):
    def __init__(self):#METODO ALMACENAMIENTO DE DATOS
        self.lista = []
    def add(self):#METODO AGREGAR ELEMENTO
        item=random.randint(1, 100)
        self.lista.append(item)

    #ALGORITMOS DE ORDENAMIENTO
def Burbuja(array):                                                                             
        #array=self.lista
        length=len(array)-1
        print(length)
        for i in range(0,length):#puntero
            print(array)
            for j in range(0, length):#intercambio
                if array[j] > array [j+1]:
                    aux=array[j]
                    array[j]=array[j+1]
                    array[j+1]=aux
        return array

def Baraja (array):                                                                                 
        lenght=len(array)
        for i in range(1,lenght):
            p = array[i]
            j = i-1
            while (j>=0 and array[j] > p):
             array[j+1] = array[j]
             j = j-1
             array[j+1] = p
             print(array)
        print(array)
def Shell(array):                                                                              
        lenght=len(array)
        print(lenght)
        intervalo=lenght//2
        while intervalo>0:
            for i in range (intervalo,lenght):
                print(array)
                p=array[i]
                q=i
                while q >= intervalo and array [q-intervalo]> p:
                    array[q]=array[q-intervalo]
                    q -= intervalo
                    array[q]=p
            intervalo//=2
        return array

def Quicksort(array):
    def __init__(self):#METODO ALMACENAMIENTO DE DATOS
        self.lista = []
    def add(self):#METODO AGREGAR ELEMENTO
        item=random.randint(1, 100)
        self.lista.append(item)

def Radix(array):                                                                         
        n=0
        for i in array:
         if len(i) > n:
            n=len(i)

        for j in range(0,len(array)):
            while len(array[j]) < n:
                array[j]= "0" + array[j]#igualar cantidad de digitos agregando 0

        for k in range(n-1,-1,-1):
            grupos=[[]for i in range(10)]#10 grupos dentro de la lista para asignarle su grupo a cada elemento
            for i in range(len(array)):
                grupos[int(array[i][k])].append(array[i])
            array=[]
            for l in grupos:
                array += l
                print(grupos)
        return [int(i) for i in array]
def Binario(array):
    def __init__(self):#METODO ALMACENAMIENTO DE DATOS
        self.lista = []
    def add(self):#METODO AGREGAR ELEMENTO
        item=random.randint(1, 100)
        self.lista.append(item)
def Heapsort(array):
    def __init__(self):#METODO ALMACENAMIENTO DE DATOS
        self.lista = []
    def add(self):#METODO AGREGAR ELEMENTO
        item=random.randint(1, 100)
        self.lista.append(item)



